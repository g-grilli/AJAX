    <script>
      axios.get('/api')
       .then(function (response) {
         console.log(response.data);
         var t = document.getElementById('temp');
         t.innerHTML = response.data.currently.temperature;
         var i = document.getElementById('icon');
         i.innerHTML = response.data.currently.icon;
         var h = document.getElementById('humid');
         h.innerHTML = response.data.currently.humidity;
         var s = document.getElementById('wind');
         s.innerHTML = response.data.currently.windSpeed;
         var u = document.getElementById('uv');
         u.innerHTML = response.data.currently.uvIndex;
       });

      var x = document.getElementById("demo");

      function getLocation() {
          if (navigator.geolocation) {
              navigator.geolocation.getCurrentPosition(showPosition);
          } else { 
              x.innerHTML = "Geolocation is not supported by this browser.";
          }
      }

      function showPosition(position) {
          x.innerHTML = "Latitude: " + position.coords.latitude + 
          "<br>Longitude: " + position.coords.longitude;
      }
    </script>

