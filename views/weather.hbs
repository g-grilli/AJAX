    <div class ="container-fluid bg-1 text-center">
      <h1 id="location"></h1>
      <h2 id="temp"></h2><p>Degrees Farenheit</p>
      <h2 id="icon"></h2><p>Is what it looks like!</p>
      <h2 id="humid"></h2><p>Humidity</p>
      <h2 id="wind"></h2><p>Wind Speed in MPH</p>
      <h2 id="uv"></h2><p>uv Index</p>
    </div>
    <div class="container-fluid footer bg-2">
      <form action="/" class="zipcode" onsubmit="return lookup()">
        <label>Change Zip Code</label>
        <input type="text" name="zip_code" id="zip_code" value="77379">
        <button type="submit" class="btn btn-default btn-sm">Submit</button>
      </form>
    </div>

